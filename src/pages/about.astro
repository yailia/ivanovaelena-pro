<script>
	// Certificate modal functionality
	document.addEventListener('DOMContentLoaded', () => {
		const modal = document.getElementById('certificateModal');
		const modalImage = modal?.querySelector('.modal-image') as HTMLImageElement;
		const modalBackdrop = modal?.querySelector('.modal-backdrop');
		const modalClose = modal?.querySelector('.modal-close');

		// Open modal on certificate click
		document.querySelectorAll('.certificate-card').forEach(card => {
			card.addEventListener('click', () => {
				const img = card.querySelector('img') as HTMLImageElement;
				if (img && modalImage && modal) {
					modalImage.src = img.src;
					modalImage.alt = img.alt;
					modal.classList.add('active');
					document.body.style.overflow = 'hidden';
				}
			});
		});

		// Open modal on diploma click
		document.querySelectorAll('.diploma-thumb').forEach(thumb => {
			thumb.addEventListener('click', () => {
				const img = thumb as HTMLImageElement;
				if (modalImage && modal) {
					modalImage.src = img.src;
					modalImage.alt = img.alt;
					modal.classList.add('active');
					document.body.style.overflow = 'hidden';
				}
			});
		});

		// Close modal
		const closeModal = () => {
			modal?.classList.remove('active');
			document.body.style.overflow = '';
		};

		modalBackdrop?.addEventListener('click', closeModal);
		modalClose?.addEventListener('click', closeModal);
		
		document.addEventListener('keydown', (e) => {
			if (e.key === 'Escape') closeModal();
		});
	});
</script>
