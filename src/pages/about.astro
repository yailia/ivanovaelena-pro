---
import Layout from '../components/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SchemaOrg from '../components/seo/SchemaOrg.astro';
import Breadcrumbs from '../components/seo/Breadcrumbs.astro';

const siteUrl = 'https://ivanovaelena.pro';
---

<Layout 
	title="Обо мне — психолог Елена Иванова | КПТ терапевт"
	description="Квалификация, опыт и стиль работы психолога Елены Ивановой. Специализация на КПТ, работа с тревогой и стрессом."
>
	<!-- Schema.org Person -->
	<SchemaOrg schema={{
		type: 'Person',
		name: 'Елена Иванова',
		jobTitle: 'Психолог, КПТ-терапевт',
		description: 'Психолог, специализируюсь на работе с тревогой и стрессом методами когнитивно-поведенческой терапии',
		url: `${siteUrl}/about`,
		knowsAbout: ['Когнитивно-поведенческая терапия', 'Тревожные расстройства', 'Стресс', 'Эмоциональное выгорание'],
	}} />

	<Header />
	<main>
		<section class="section">
			<div class="container">
				<Breadcrumbs items={[
					{ name: 'Обо мне', url: '/about' },
				]} />
				<h1>Обо мне</h1>
				
				<div class="about-content">
					<div class="about-section">
						<h2>Квалификация</h2>
						<p>Информация о квалификации и образовании.</p>
					</div>

					<div class="about-section">
						<h2>Опыт</h2>
						<p>Опыт работы и специализация.</p>
					</div>

					<div class="about-section">
						<h2>Стиль работы</h2>
						<p>Как я работаю с клиентами.</p>
					</div>

					<div class="about-section">
						<h2>Сертификаты</h2>
						<p>Сертификаты и дополнительное образование.</p>
					</div>

					<div class="about-section">
						<h2>История подхода</h2>
						<p>Как я пришла к КПТ и почему выбрала этот метод.</p>
					</div>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>

<style>
	.about-content {
		display: flex;
		flex-direction: column;
		gap: 3rem;
		margin-top: 3rem;
	}

	.about-section {
		padding: 2rem;
		background: white;
		border: 1px solid var(--color-border);
		border-radius: var(--radius-card);
	}
</style>




