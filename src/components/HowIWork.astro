<style>
  :root {
    --how-i-work-bg: #ecfdf9;
    --how-i-work-mint: #6fd8c5;
    --how-i-work-text: #1f2a2e;
    --how-i-work-text-muted: #545454;
    --how-i-work-accent: #3a8dff;
    --how-i-work-line: linear-gradient(90deg, #5c9eff 0%, #2ac6ff 100%);
    --how-i-work-line-vertical: linear-gradient(180deg, #5c9eff 0%, #2ac6ff 100%);
    --how-i-work-line-thickness: 3px;
    --how-i-work-line-radius: 999px;
    --how-i-work-gap: clamp(32px, 5vw, 72px);
  }

  .how-i-work-section {
    padding: clamp(80px, 10vw, 120px) 0;
    background: var(--how-i-work-bg);
  }

  .how-i-work-section__container {
    width: min(1200px, 100%);
    margin: 0 auto;
    padding: 0 clamp(20px, 4vw, 40px);
  }

  .how-i-work-section__intro {
    text-align: center;
    margin-bottom: clamp(48px, 6vw, 72px);
  }

  .how-i-work-section__title {
    margin: 0 0 12px;
    font-family: "Inter", "Manrope", system-ui, -apple-system, BlinkMacSystemFont,
      "Segoe UI", sans-serif;
    font-size: clamp(32px, 5vw, 48px);
    font-weight: 700;
    color: var(--how-i-work-text);
    letter-spacing: -0.02em;
  }

  .how-i-work-section__subtitle {
    margin: 0;
    font-size: clamp(18px, 3vw, 20px);
    line-height: 1.6;
    color: var(--how-i-work-text-muted);
  }

  .how-i-work-path {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
  }

  .how-i-work-step {
    position: relative;
    padding: clamp(24px, 3vw, 32px) clamp(20px, 3vw, 28px);
    border-radius: 16px;
    /* Glass effect with solid inner background */
    background: 
      linear-gradient(
        135deg, 
        rgba(255, 255, 255, 0.4) 0%, 
        rgba(255, 255, 255, 0.15) 100%
      ),
      #ecfdf9;
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    border: 1.5px solid rgba(58, 141, 255, 0.3);
    box-shadow: 0 8px 32px rgba(10, 31, 68, 0.06);
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 20px;
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.6s ease,
      transform 0.6s ease,
      box-shadow 0.3s ease,
      background 0.3s ease,
      border-color 0.3s ease;
    z-index: 1;
  }

  /* Большая цифра под стеклом */
  .how-i-work-step::before {
    content: attr(data-step);
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-family: "Inter", "Manrope", system-ui, sans-serif;
    font-size: clamp(120px, 15vw, 180px);
    font-weight: 800;
    color: var(--how-i-work-accent);
    opacity: 0.12;
    line-height: 1;
    pointer-events: none;
    z-index: -1;
    filter: blur(4px);
  }

  .how-i-work-step:hover {
    box-shadow: 0 12px 40px rgba(10, 31, 68, 0.1);
    border-color: rgba(58, 141, 255, 0.5);
    background: 
      linear-gradient(
        135deg, 
        rgba(255, 255, 255, 0.5) 0%, 
        rgba(255, 255, 255, 0.2) 100%
      ),
      #ecfdf9;
  }

  .how-i-work-step.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .how-i-work-step__icon {
    width: clamp(64px, 8vw, 88px);
    height: clamp(64px, 8vw, 88px);
    margin: 0 auto;
    color: var(--how-i-work-accent);
  }

  .how-i-work-step__icon svg {
    width: 100%;
    height: 100%;
  }

  .how-i-work-step__text {
    margin: 0;
    font-family: "Inter", "Manrope", system-ui, -apple-system, BlinkMacSystemFont,
      "Segoe UI", sans-serif;
    font-size: 16px;
    line-height: 1.6;
    color: var(--how-i-work-text);
  }

  @media (max-width: 1024px) {
    .how-i-work-path {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
  }

  @media (max-width: 600px) {
    .how-i-work-path {
      grid-template-columns: 1fr;
      gap: 16px;
    }
  }
</style>

<script>
  const initHowIWorkReveal = () => {
    const steps = Array.from(document.querySelectorAll(".how-i-work-step"));
    if (!steps.length) return;

    const revealAll = () => steps.forEach((step) => step.classList.add("is-visible"));

    if (!("IntersectionObserver" in window)) {
      revealAll();
      return;
    }

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("is-visible");
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.25 }
    );

    steps.forEach((step, index) => {
      step.style.transitionDelay = `${0.15 * index}s`;
      observer.observe(step);
    });
  };

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initHowIWorkReveal);
  } else {
    initHowIWorkReveal();
  }
</script>




