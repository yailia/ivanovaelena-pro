---
/**
 * SEO Head Component
 * Содержит все мета-теги для SEO оптимизации под Яндекс
 */

interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  ogType?: 'website' | 'article';
  articlePublishedTime?: string;
  articleModifiedTime?: string;
  articleAuthor?: string;
  noindex?: boolean;
}

const {
  title,
  description,
  canonical = Astro.url.href,
  ogImage = '/og-default.png',
  ogType = 'website',
  articlePublishedTime,
  articleModifiedTime,
  articleAuthor = 'Елена Иванова',
  noindex = false,
} = Astro.props;

const siteUrl = 'https://ivanovaelena.pro';
const siteName = 'Психолог Елена Иванова';
const fullOgImage = ogImage.startsWith('http') ? ogImage : `${siteUrl}${ogImage}`;
const canonicalUrl = canonical.startsWith('http') ? canonical : `${siteUrl}${canonical}`;
---

<!-- Primary Meta Tags -->
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="author" content={articleAuthor} />
<meta name="language" content="Russian" />
<meta name="geo.region" content="RU" />

<!-- Robots -->
{noindex ? (
  <meta name="robots" content="noindex, nofollow" />
) : (
  <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
)}

<!-- Canonical URL -->
<link rel="canonical" href={canonicalUrl} />

<!-- Open Graph / Facebook / VK -->
<meta property="og:type" content={ogType} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={fullOgImage} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:locale" content="ru_RU" />
<meta property="og:site_name" content={siteName} />

<!-- Article specific OG tags -->
{ogType === 'article' && articlePublishedTime && (
  <meta property="article:published_time" content={articlePublishedTime} />
)}
{ogType === 'article' && articleModifiedTime && (
  <meta property="article:modified_time" content={articleModifiedTime} />
)}
{ogType === 'article' && (
  <meta property="article:author" content={articleAuthor} />
)}

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={canonicalUrl} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={fullOgImage} />

<!-- Yandex specific -->
<meta name="yandex-verification" content="" />

