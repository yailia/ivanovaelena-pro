<style>
  .problems-section {
    position: relative;
    padding: var(--spacing-section) 0;
    overflow: hidden;
  }

  .problems-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 0;
  }

  .problems-gradient {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(180deg, #f7fbff 0%, #ffffff 100%);
  }

  .problems-backdrop-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 0;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }

  .problems-backdrop-layer {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      180deg,
      rgba(247, 251, 255, 0.6) 0%,
      rgba(255, 255, 255, 0.6) 100%
    );
    filter: blur(30px);
    z-index: 0;
  }

  .problems-gradient-circles {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
  }

  .problems-gradient-circle {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.5;
  }

  .problems-gradient-circle-1 {
    width: 550px;
    height: 550px;
    background: var(--color-bg-primary);
    top: 50%;
    left: -150px;
    transform: translateY(-50%);
  }

  .problems-gradient-circle-2 {
    width: 400px;
    height: 400px;
    background: var(--color-bg-primary);
    top: 30%;
    right: -100px;
  }

  .problems-gradient-circle-3 {
    width: 300px;
    height: 300px;
    background: var(--color-bg-primary);
    bottom: 20%;
    right: -50px;
  }

  .problems-shapes {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
  }

  .problems-shape {
    position: absolute;
    border-radius: 50%;
    opacity: 0.15;
  }

  .problems-shape-1 {
    width: 400px;
    height: 300px;
    background: #e3f0ff;
    top: -50px;
    left: -100px;
    animation: floatShape1 8s ease-in-out infinite;
  }

  .problems-shape-2 {
    width: 350px;
    height: 280px;
    background: #d0e7ff;
    top: 200px;
    right: -80px;
    animation: floatShape2 10s ease-in-out infinite;
  }

  .problems-shape-3 {
    width: 300px;
    height: 250px;
    background: #e3f0ff;
    bottom: -50px;
    left: 20%;
    animation: floatShape3 9s ease-in-out infinite;
  }

  @keyframes floatShape1 {
    0%,
    100% {
      transform: translateY(0) translateX(0);
    }
    50% {
      transform: translateY(-10px) translateX(5px);
    }
  }

  @keyframes floatShape2 {
    0%,
    100% {
      transform: translateY(0) translateX(0);
    }
    50% {
      transform: translateY(8px) translateX(-5px);
    }
  }

  @keyframes floatShape3 {
    0%,
    100% {
      transform: translateY(0) translateX(0);
    }
    50% {
      transform: translateY(-8px) translateX(5px);
    }
  }

  .container {
    position: relative;
    z-index: 1;
  }

  .section-title {
    font-family: "Inter", sans-serif;
    font-size: 36px;
    font-weight: 700;
    color: #0a1f44;
    margin-bottom: 1rem;
    text-align: center;
    line-height: 1.2;
  }

  .section-subtitle {
    font-family: "Inter", sans-serif;
    font-size: 20px;
    font-weight: 400;
    color: #4b4b4b;
    margin: 0 auto 3rem;
    text-align: center;
    max-width: 600px;
    line-height: 1.5;
  }

  .problems-list-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: clamp(2.5rem, 4vw, 3.75rem);
    max-width: 1000px;
    margin: 0 auto;
  }

  .problems-column {
    display: flex;
    flex-direction: column;
    gap: clamp(1rem, 1.25vw, 1.25rem);
  }

  .problem-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 1rem;
    margin: 0 -1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    cursor: pointer;
    animation: fadeInLeft 0.6s ease-out backwards;
  }

  .problem-item:nth-child(1) {
    animation-delay: 0.1s;
  }

  .problem-item:nth-child(2) {
    animation-delay: 0.2s;
  }

  .problem-item:nth-child(3) {
    animation-delay: 0.3s;
  }

  .problem-item:nth-child(4) {
    animation-delay: 0.4s;
  }

  .problem-item:hover {
    transform: translateX(4px);
    background-color: #e3f0ff;
  }

  .problem-item:hover .problem-text {
    color: #0a1f44;
  }

  .problem-item:hover .problem-checkbox {
    transform: scale(1.1);
    box-shadow: 0 4px 12px rgba(92, 158, 255, 0.3);
  }

  .problem-checkbox {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: linear-gradient(135deg, #5c9eff 0%, #2ac6ff 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .problem-checkbox svg {
    opacity: 0;
    transform: scale(0) rotate(-90deg);
    transition:
      opacity 0.3s ease,
      transform 0.3s ease;
  }

  .problems-section.in-view .problem-checkbox svg {
    animation: checkmarkPopIn 0.5s ease-out forwards;
  }

  .problems-section:not(.in-view) .problem-checkbox svg {
    opacity: 0;
    transform: scale(0) rotate(-90deg);
    animation: none;
  }

  .problems-section.in-view .problem-item:nth-child(1) .problem-checkbox svg {
    animation-delay: 0.1s;
  }

  .problems-section.in-view .problem-item:nth-child(2) .problem-checkbox svg {
    animation-delay: 0.2s;
  }

  .problems-section.in-view .problem-item:nth-child(3) .problem-checkbox svg {
    animation-delay: 0.3s;
  }

  .problems-section.in-view .problem-item:nth-child(4) .problem-checkbox svg {
    animation-delay: 0.4s;
  }

  @keyframes checkmarkPopIn {
    0% {
      opacity: 0;
      transform: scale(0) rotate(-90deg);
    }
    60% {
      transform: scale(1.2) rotate(10deg);
    }
    100% {
      opacity: 1;
      transform: scale(1) rotate(0deg);
    }
  }

  .problem-text {
    font-family: "Inter", sans-serif;
    font-size: 18px;
    font-weight: 400;
    color: #0a1f44;
    margin: 0;
    line-height: 1.5;
    transition:
      color 0.3s ease,
      text-decoration 0.3s ease;
  }

  .problem-item.completed .problem-text {
    text-decoration: line-through;
    color: #4b4b4b;
    opacity: 0.7;
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: clamp(28px, 6vw, 36px);
    }

    .section-subtitle {
      font-size: 18px;
      margin-bottom: 2rem;
    }

    .problems-list-wrapper {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .problems-column {
      gap: 1rem;
    }

    .problem-item {
      animation-delay: 0s !important;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const problemsSection = document.getElementById("problems-section");

    if (!problemsSection) return;

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            problemsSection.classList.add("in-view");
          } else {
            // Убираем класс при выходе из вьюпорта, чтобы анимация могла сработать снова
            problemsSection.classList.remove("in-view");
          }
        });
      },
      {
        threshold: 0.2, // Срабатывает когда 20% секции видно
        rootMargin: "0px 0px -100px 0px", // Небольшая задержка перед срабатыванием
      }
    );

    observer.observe(problemsSection);

    // Обработчик клика для зачеркивания текста
    const problemItems = problemsSection.querySelectorAll(".problem-item");
    problemItems.forEach((item) => {
      item.addEventListener("click", () => {
        item.classList.toggle("completed");
      });
    });
  });
</script>
