---
import "../styles/global.css";
import BookingModal from "./BookingModal.astro";
import SEOHead from "./seo/SEOHead.astro";

interface Props {
  title: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  ogType?: "website" | "article";
  articlePublishedTime?: string;
  articleModifiedTime?: string;
  noindex?: boolean;
}

const {
  title,
  description = "Психолог Елена Иванова. Помогаю справиться с тревогой и стрессом методами КПТ. Онлайн консультации.",
  canonical,
  ogImage = "/og-default.png",
  ogType = "website",
  articlePublishedTime,
  articleModifiedTime,
  noindex = false,
} = Astro.props;
---

<style>
  .page-wrapper {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .page-wrapper > main {
    flex: 1;
  }
</style>

<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <SEOHead
      title={title}
      description={description}
      canonical={canonical}
      ogImage={ogImage}
      ogType={ogType}
      articlePublishedTime={articlePublishedTime}
      articleModifiedTime={articleModifiedTime}
      noindex={noindex}
    />

    <!-- Шрифты загружаются локально через global.css -->

    <title>{title}</title>

    <!-- Yandex.Metrika counter -->
    {import.meta.env.PROD && (
      <script type="text/partytown">
      (function (m, e, t, r, i, k, a) {
        m[i] =
          m[i] ||
          function () {
            (m[i].a = m[i].a || []).push(arguments);
          };
        m[i].l = 1 * new Date();
        for (var j = 0; j < document.scripts.length; j++) {
          if (document.scripts[j].src === r) {
            return;
          }
        }
        (k = e.createElement(t)),
          (a = e.getElementsByTagName(t)[0]),
          (k.async = 1),
          (k.src = r),
          a.parentNode.insertBefore(k, a);
      })(
        window,
        document,
        "script",
        "https://mc.yandex.ru/metrika/tag.js?id=105578277",
        "ym"
      );

      ym(105578277, "init", {
        ssr: true,
        webvisor: true,
        trackHash: true,
        clickmap: true,
        ecommerce: "dataLayer",
        accurateTrackBounce: true,
        trackLinks: true,
      });
    </script>
    <noscript
      ><div>
        <img
          src="https://mc.yandex.ru/watch/105578277"
          style="position:absolute; left:-9999px;"
          alt=""
        />
      </div>    </noscript
    >
    )}
    <!-- /Yandex.Metrika counter -->

    <slot name="head" />
  </head>
  <body>
    <div class="page-wrapper">
      <slot />
    </div>
    <BookingModal />
  </body>
</html>
